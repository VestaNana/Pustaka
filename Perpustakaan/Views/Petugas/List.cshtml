@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KodePetugas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nama)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modified)
        </td>*@
        <td>
            <input type="button" value="Edit" class="btn btn-warning btn-edit" data-id="@item.Id " />
            <input type="button" value="Delete" class="btn btn-danger btn-delete" data-id="@item.Id" />
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(".btn-edit").click(function () {
        //alert('Idnya adalah: ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Edit", "Petugas")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });

    $(".btn-delete").click(function () {
        //alert('Idnya adalah: ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Delete", "Petugas")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });
</script>